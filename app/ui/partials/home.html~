<div class="container" fade-in>
	<link href="//vjs.zencdn.net/4.5/video-js.css" rel="stylesheet">
	<script src="//vjs.zencdn.net/4.5/video.js"></script>
	<script type="text/javascript">
		var video = document.getElementById("example_video_1"); 
		//  load video file from input field
                function getVideo() {
		    var videoposter = document.getElementsByClassName("vjs-poster");
                    var fileURL = document.getElementById("videoFile").value;  // get input field                    
		    var posterURL = document.getElementById("posterURL").value;
		    console.log(videoposter[0].style);
		    console.log(posterURL);
                    if (fileURL != ""){
                       video.src = fileURL;
		       video.poster=posterURL;
		       videoposter.style.backgroundImage ='url('+posterURL+')';
		       video.load;
                     } else {
                        errMessage("Enter a valid video URL");  // fail silently
                     }
                }
	</script>
	<div style="padding-top: 2em;">


            <div class="jumbotron" align="center">
		<video id="example_video_1" class="video-js vjs-default-skin"
			controls preload="auto" width="640" height="264"
			poster="http://video-js.zencoder.com/oceans-clip.png"
			data-setup='{"example_option":true}'>
			<source src="http://video-js.zencoder.com/oceans-clip.mp4" type='video/mp4' />
	 		<p class="vjs-no-js">To view this video please enable JavaScript, and consider upgrading to a web browser that <a href="http://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a></p>
		</video>
	    </div>
	</div>
    	<div id= "inputField" >
	    <input type="text" id="videoFile" value="http://www.jplayer.org/video/m4v/Big_Buck_Bunny_Trailer.m4v" />        
	    <input type="text" id="posterURL" value="http://www.jplayer.org/video/poster/Big_Buck_Bunny_Trailer_480x270.png" />
	    <button id="loadVideo" onclick="getVideo();">Load</button>
	</div>
